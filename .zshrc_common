# gitコマンド補完設定
fpath=(~/.zsh $fpath)
zstyle ':completion:*:*:git:*' script ~/.git-completion.bash
autoload -Uz compinit && compinit

# git-prompt設定
if [ -f ~/.git-prompt.sh ]; then
    source ~/.git-prompt.sh
fi

setopt PROMPT_SUBST ; PS1='[%n@%m %c]$(__git_ps1 "\e[31m(%s)\e[00m")\$ '

